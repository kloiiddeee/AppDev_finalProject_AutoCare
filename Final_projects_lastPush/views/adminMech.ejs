        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }

        .card {
            width: 250px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
            background-color: #fff;
            border: 1px solid #ddd;
            margin: 5px; 
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card img {
            width: 75px;
            height: 75px;
            object-fit: cover;
            margin-bottom: 15px;
            border-radius: 50%;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .card-body {
            text-align: center;
            padding: 15px;
        }

        .card-body h5 {
            font-size: 18px;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .card-body p {
            font-size: 14px;
            margin: 5px 0;
            color: #555;
        }

        .card-footer {
            padding: 10px;
            text-align: center;
            background-color: #f8f9fa;
            border-top: 1px solid #ddd;
        }

        .card-footer a {
            display: inline-block;
            font-size: 14px;
            padding: 5px 10px;
            margin: 0 5px;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }
    </style>
    
