        <script>
             document.addEventListener("DOMContentLoaded", function () {
    const contactForm = document.getElementById("contactFormForm");  // Ensure you target the correct form ID
    const alertModal = document.getElementById("alertModal");
    const modalMessage = document.getElementById("modalMessage");
    const closeButton = document.querySelector(".close-button");

    // Handle form submission
    contactForm.addEventListener("submit", async (e) => {
        e.preventDefault();  // Prevent the default form submission

        const formData = new FormData(contactForm);  // Create FormData object from the form
        const formObj = Object.fromEntries(formData.entries());  // Convert FormData to a plain object

        console.log("Form data being sent:", formObj);  // Debugging step to check what data is being sent

        try {
            const response = await fetch("/api/contact", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(formObj),  // Send the form data as JSON
            });

            const result = await response.json();

            if (response.ok) {
                modalMessage.textContent = result.message || "Email sent successfully!";
            } else {
                modalMessage.textContent = result.message || "Failed to send email.";
            }

            // Display the modal with the result message
            alertModal.style.display = "block";
        } catch (error) {
            console.error("Error:", error);
            modalMessage.textContent = "An error occurred while sending the email.";
            alertModal.style.display = "block";
        }
    });

    // Close modal
    closeButton.addEventListener("click", () => {
        alertModal.style.display = "none";
    });

    // Close modal when clicking outside of it
    window.addEventListener("click", (event) => {
        if (event.target === alertModal) {
            alertModal.style.display = "none";
        }
    });
});

        </script>

