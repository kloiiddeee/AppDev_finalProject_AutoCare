    <script>
        async function loadInventory() {
    try {
        const response = await fetch('/get-all-inventory');
        const inventory = await response.json();
        console.log(inventory);  // Log the inventory data to check if it's correct

        const inventoryTableBody = document.getElementById('invTableBody');
        inventoryTableBody.innerHTML = ''; 

        inventory.forEach(item => {
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${item.name}</td>
                <td>${item.part_type}</td>
                <td>${item.item_type}</td>
                <td>${item.brand}</td>
                <td>${item.quantity}</td>
                <td>$${item.price.toFixed(2)}</td>
                <td>
                    <a href="/updateInventory/${item.id}" class="btn update btn-sm">Update</a>
                    <a href="/deleteInventory/${item.id}" class="btn del btn-sm" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                </td>
            `;
            inventoryTableBody.appendChild(row);
        });
    } catch (error) {
        console.error('Error loading inventory:', error);
    }
}

        document.addEventListener('DOMContentLoaded', loadInventory);
    </script>


<!--......................................Search......................................-->
        <script>
            function searchTable() {
                var input, filter, table, tr, td, i, txtValue;
                input = document.getElementById("searchInput");
                filter = input.value.toUpperCase();
                table = document.getElementById("inventoryTable");
                tr = table.getElementsByTagName("tr");

                for (i = 1; i < tr.length; i++) {
                    tr[i].style.display = "none";
                    td = tr[i].getElementsByTagName("td");
                    for (var j = 0; j < td.length - 1; j++) { 
                        if (td[j]) {
                            txtValue = td[j].textContent || td[j].innerText;
                            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                                tr[i].style.display = "";
                                break;
                            }
                        }
                    }
                }
            }
        </script>


